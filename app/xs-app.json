{
    "authenticationMethod": "route",
    "routes": [
        {
            "source": "/v2/(.*)",
            "target": "/v2/$1",
            "destination": "srv-api",
            "csrfProtection": true,
            "authenticationType": "xsuaa"
        },
        {
            "source": "/cpi-api-v4/(.*)$",
            "target": "/cpi-api-v4/$1",
            "destination": "srv-api",
            "csrfProtection": false,
            "authenticationType": "xsuaa"
        },
        {
            "source": "/cpi-api/(.*)$",
            "target": "/cpi-api/$1",
            "destination": "srv-api",
            "csrfProtection": false,
            "authenticationType": "xsuaa"
        },
        {
            "source": "^/user-api(.*)",
            "target": "$1",
            "service": "sap-approuter-userapi"
        },
        {
            "source": "/(.*)",
            "localDir": ".",
            "authenticationType": "xsuaa",
            "cacheControl": "no-cache, no-store, must-revalidate"
        }
    ],
    "welcomeFile": "/initiator/webapp/index.html"
}
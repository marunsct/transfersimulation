{
    "authenticationMethod": "route",
    "routes": [
        {
            "source": "^/http/(.*)$",
            "target": "/http/$1",
            "destination": "CPI_DEV",
            "authenticationType": "xsuaa",
            "csrfProtection": false,
            "scope": [
                "transfersimulation.user",
                "transfersimulation.Admin",
                "transfersimulation.Manager",
                "transfersimulation.HR"
            ]
        },
        {
            "source": "^/upsert",
            "target": "/odata/v2/upsert",
            "destination": "SFSF",
            "authenticationType": "xsuaa",
            "csrfProtection": false,
            "scope": [
                "transfersimulation.Admin",
                "transfersimulation.Manager",
                "transfersimulation.HR"
            ]
        },
        {
            "source": "^/SFSF/(.*)$",
            "target": "/$1",
            "destination": "SFSF",
            "authenticationType": "xsuaa",
            "csrfProtection": false,
            "scope": [
                "transfersimulation.user",
                "transfersimulation.Admin",
                "transfersimulation.Manager",
                "transfersimulation.HR"
            ]
        },
        {
            "source": "^/user-api(.*)",
            "target": "$1",
            "service": "sap-approuter-userapi"
        },
        {
            "source": "^/loggedout.html$",
            "localDir": ".",
            "authenticationType": "none"
        },
        {
            "source": "/(.*)",
            "localDir": ".",
            "authenticationType": "xsuaa",
            "scope": {
                "GET": [
                    "transfersimulation.user",
                    "transfersimulation.Admin",
                    "transfersimulation.Manager"
                ],
                "PATCH": [
                    "transfersimulation.Admin",
                    "transfersimulation.Manager",
                    "transfersimulation.HR"
                ],
                "POST": [
                    "transfersimulation.Admin",
                    "transfersimulation.Manager",
                    "transfersimulation.HR"
                ],
                "PUT": [
                    "transfersimulation.Admin",
                    "transfersimulation.Manager",
                    "transfersimulation.HR"
                ],
                "DELETE": [
                    "transfersimulation.Admin",
                    "transfersimulation.Manager",
                    "transfersimulation.HR"
                ],
                "default": [
                    "transfersimulation.user",
                    "transfersimulation.Admin",
                    "transfersimulation.Manager",
                    "transfersimulation.HR"
                ]
            },
            "cacheControl": "no-cache, no-store, must-revalidate"
        }
    ],
    "logout": {
        "logoutEndpoint": "/logout",
        "logoutPage": "/loggedout.html"
    },
    "welcomeFile": "/transferinitiation/index.html"
}
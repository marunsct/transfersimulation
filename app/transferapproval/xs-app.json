{
    "welcomeFile": "/index.html",
    "authenticationMethod": "route",
    "routes": [
        {
            "source": "^/http/(.*)$",
            "target": "/http/$1",
            "destination": "CPI_DEV",
            "authenticationType": "xsuaa",
            "csrfProtection": false,
            "scope": [
                "transfersimulation.Admin",
                "transfersimulation.HR"
            ]
        },
        {
            "source": "^/upsert",
            "target": "/odata/v2/upsert",
            "destination": "SFSF",
            "authenticationType": "xsuaa",
            "csrfProtection": false,
            "scope": [
                "transfersimulation.Admin",
                "transfersimulation.HR"
            ]
        },
        {
            "source": "^/SFSF/(.*)$",
            "target": "/$1",
            "destination": "SFSF",
            "authenticationType": "xsuaa",
            "csrfProtection": false,
            "scope": [
                "transfersimulation.user",
                "transfersimulation.Admin",
                "transfersimulation.HR"
            ]
        },
        {
            "source": "^/resources/(.*)$",
            "target": "/resources/$1",
            "authenticationType": "none",
            "destination": "ui5"
        },
        {
            "source": "^/test-resources/(.*)$",
            "target": "/test-resources/$1",
            "authenticationType": "none",
            "destination": "ui5"
        },
        {
            "source": "^(.*)$",
            "target": "$1",
            "service": "html5-apps-repo-rt",
            "authenticationType": "xsuaa",
            "scope": {
                "GET": [
                    "transfersimulation.user",
                    "transfersimulation.Admin",
                    "transfersimulation.HR"
                ],
                "PATCH": [
                    "transfersimulation.Admin",
                    "transfersimulation.HR"
                ],
                "POST": [
                    "transfersimulation.Admin",
                    "transfersimulation.HR"
                ],
                "PUT": [
                    "transfersimulation.Admin",
                    "transfersimulation.HR"
                ],
                "DELETE": [
                    "transfersimulation.Admin",
                    "transfersimulation.HR"
                ],
                "default": [
                    "transfersimulation.user",
                    "transfersimulation.Admin",
                    "transfersimulation.HR"
                ]
            },
            "cacheControl": "no-cache, no-store, must-revalidate"
        }
    ],
    "logout": {
        "logoutEndpoint": "/my/logout",
        "logoutPage": "/loggedout.html"
    }
}
                                            <TextArea value="{data>comments}" id="area0_copy_TransferReqTable_0_TransferReqTable_0" height="2.5rem" rows="4" width="14.5rem" enabled="{=${data>Status} === 'Initiated'}" />
                                            <Button id="button1_0_copy_TransferReqTable_0_TransferReqTable_0" icon="sap-icon://feeder-arrow" type="Transparent" press="_onTableItemPress" tooltip="Go to Details Page" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                                <headerToolbar>

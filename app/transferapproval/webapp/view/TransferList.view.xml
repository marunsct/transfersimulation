                                    <IconTabFilter class="iconNegative sapUiSmallMarginBegin sapUiMediumMarginEnd " icon="sap-icon://sys-cancel" iconColor="Negative" count="{data>/rejected}" text="Rejected" key="rejected" id="filter7" />


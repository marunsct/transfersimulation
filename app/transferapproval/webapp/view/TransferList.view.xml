                                    </Column>
                                    <Column id="column11" width="3rem">
                                        <Text text="" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem highlight="{=${data>Status} === 'Initiated' ? 'Warning' : ${data>Status} === 'Approved' ? 'Success' : 'Error'}" type="Active" id="item13_TransferReqTable_0_TransferReqTable_0">
                                        <cells>
                                            <Link text="{data>employeeid}" id="link0_copy_TransferReqTable_0_TransferReqTable_0" press="onViewProfile" tooltip="View Profile" />
                                            <Text text="{data>name}" id="text28_TransferReqTable_0_TransferReqTable_0" />
                                            <Text text="{data>department}" id="text12_copy_TransferReqTable_0_TransferReqTable_0" />
                                            <Text text="{data>employmentType}" id="text13_copy_TransferReqTable_0_TransferReqTable_0" />
                                            <Text text="{data>supervisor}" id="text14_copy_TransferReqTable_0_TransferReqTable_0" />
                                            <ObjectStatus state="{=${data>eligibility} !== 'warning' ? 'Success' : 'Warning' }" id="status0_copy_TransferReqTable_0_TransferReqTable_0" icon="{=${data>eligibility} !== 'warning' ? 'sap-icon://sys-enter' : 'sap-icon://warning' }" />
                                            <Text text="{data>currentpos}" id="text016_copy_TransferReqTable_0_TransferReqTable_0" />
                                            <Text text="{data>newpos}" id="text16_copy_TransferReqTable_0_TransferReqTable_0" />

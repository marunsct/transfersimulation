<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:dnd="sap.ui.core.dnd" controllerName="transferinitiation.controller.EmployeeList" id="EmployeeList" displayBlock="false">
    <f:DynamicPage id="dynamicPageId" showFooter="{FclRouter>/footerVisible}" headerExpanded="{FclRouter>/headerExpanded}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading/>
                <f:content>
                    <Title id="textH" text="{i18n>employeeTitle}"/>
                </f:content>
                <f:actions/>
                <f:navigationActions/>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <f:content>
                    <VBox fitContainer="true">
                        <items>
                            <fb:FilterBar id="filterbar0" search=".onSearch" clear="onClear" useToolbar="false" showGoOnFB="true" showClearOnFB="true" showFilterConfiguration="false">
                                <fb:filterGroupItems>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="A" label="{i18n>department}" visibleInFilterBar="true" labelTooltip="{i18n>department}">
                                        <fb:control>
                                            <Input validationError="handleValidationError" validationSuccess="handleValidationSuccess" value="{path:'department>/filter/department1', type: 'sap.ui.model.type.String', constraints: { search: '^[0-9,*,a-z,A-Z]*$' }}" showSuggestion="true" id="fDepartment" suggest=".onSuggest" suggestionItems="{filter>/department}">
                                                <suggestionItems>
                                                    <core:Item text="{filter>name}"/>
                                                </suggestionItems>
                                            </Input>

                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="B" label="{i18n>class}" visibleInFilterBar="true" labelTooltip="{i18n>class}">
                                        <fb:control>
                                            <Input validationError="handleValidationError" validationSuccess="handleValidationSuccess" value="{path:'suppInvoiceNo', type: 'sap.ui.model.type.String', constraints: { search: '^[0-9,*,a-z,A-Z]*$' }}"/>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="C" label="{i18n>type}" visibleInFilterBar="true" labelTooltip="{i18n>type}">
                                        <fb:control>
                                            <!--Input validationError="handleValidationError" validationSuccess="handleValidationSuccess" value="{path:'suppInvoiceNo', type: 'sap.ui.model.type.String', constraints: { search: '^[0-9,*,a-z,A-Z]*$' }}"/ -->
                                            <Select forceSelection="false" selectedKey="{filter>/filter/type}" items="{                                                                 path: 'filter>/type',                                                                 sorter: { path: 'name' }                                                             }">
                                                <core:Item key="{filter>name}" text="{filter>name}"/>
                                            </Select>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="D" label="{i18n>location}" visibleInFilterBar="true" labelTooltip="{i18n>location}">
                                        <fb:control>
                                            <Input validationError="handleValidationError" validationSuccess="handleValidationSuccess" value="{path:'costCenterGrp', type: 'sap.ui.model.type.String'}"/>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="E" label="{i18n>supervisor}" visibleInFilterBar="true" labelTooltip="{i18n>supervisor}">
                                        <fb:control>
                                            <Input validationError="handleValidationError" validationSuccess="handleValidationSuccess" value="{path:'costCenter', type: 'sap.ui.model.type.String'}"/>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="F" visibleInFilterBar="true" label="{i18n>position}" labelTooltip="{i18n>position}">
                                        <fb:control>
                                            <Input validationError="handleValidationError" validationSuccess="handleValidationSuccess" value="{path:'wbsElement', type: 'sap.ui.model.type.String'}"/>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                </fb:filterGroupItems>
                            </fb:FilterBar>
                        </items>
                    </VBox>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <!-- DynamicPage Content -->
        <f:content>
            <!-- commnt scroll 	
							
					
						<ScrollContainer id="sc1" height="100%" width="100%" horizontal="false" vertical="true" focusable="true">
							-->
            <Table sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" noDataText="{i18n>terror}" id="table0" items="{oData>/Employees}" fixedLayout="true" includeItemInSelection="false" growingScrollToLoad="true" growing="true" growingThreshold="15" updateFinished="onUpdateFinished" updateStarted="onUpdateStarted" growingTriggerText="..." itemPress="_onTableItemPress" mode="SingleSelectMaster">
                <dragDropConfig>
                    <dnd:DragInfo groupName="available2selected" sourceAggregation="items"/>
                </dragDropConfig>
                <items>
                    <ColumnListItem type="Active" id="item0">
                        <cells>
                            <f:Avatar src="{oData>Employee_Photo}" displaySize="S" showBorder="true" press="_onAvatarPress1" initials="{parts:[ {path: 'oData>First_Name'}, {path: 'oData>Last_Name'} ], formatter:'.avatarInitialsFormatter'}"/>
                            <ObjectIdentifier title="{=${oData>Last_Name} + ' ' + ${oData>First_Name}}" text="{oData>Employee_ID}" titleActive="false" visible="true"/>
                            <Text text="{oData>Department}" id="text4" wrapping="true"/>
                            <Text text="{oData>Class}" id="text5" wrapping="true"/>
                            <Text text="{oData>Employment_Type}" id="text6" wrapping="true"/>
                            <Text text="{oData>Employee_Location}" id="text7" wrapping="true"/>
                            <Text text="{oData>Supervisor}" id="text8" wrapping="true"/>
                            <Text text="{oData>Position}" id="text9" wrapping="true"/>
                            <ObjectStatus xmlns="sap.m" text="{oData>Transfer_Criteria}" state="{=${oData>Transfer_Criteria} === 'Eligible' ? 'Success' : 'Error' }" id="status0" icon="{=${oData>Transfer_Criteria} === 'Eligible' ? 'sap-icon://status-positive' : 'sap-icon://status-negative' }"/>
                        </cells>
                    </ColumnListItem>
                </items>
                <columns>
                    <Column id="column0" minScreenWidth="Phone">
                        <header>
                            <Label id="label0"/>
                        </header>
                    </Column>
                    <Column id="column1" minScreenWidth="Phone">
                        <header>
                            <Label text="{i18n>employee}" id="label1" wrapping="true"/>
                        </header>
                    </Column>
                    <Column id="column2" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
                        <header>
                            <Label text="{i18n>department}" id="label2" wrapping="true"/>
                        </header>
                    </Column>
                    <Column id="column3" minScreenWidth="Desktop">
                        <header>
                            <Label id="label3" text="{i18n>class}" wrapping="true"/>
                        </header>
                    </Column>
                    <Column id="column4" minScreenWidth="Desktop">
                        <header>
                            <Label text="{i18n>type}" id="label4" wrapping="true"/>
                        </header>
                    </Column>
                    <Column id="column5" minScreenWidth="Desktop">
                        <header>
                            <Label text="{i18n>location}" id="label5" wrapping="true"/>
                        </header>
                    </Column>
                    <Column id="column6" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
                        <header>
                            <Label text="{i18n>supervisor}" id="label6" wrapping="true"/>
                        </header>
                    </Column>
                    <Column id="column7" minScreenWidth="Desktop">
                        <header>
                            <Label text="{i18n>position}" id="label7" wrapping="true"/>
                        </header>
                    </Column>
                    <Column id="column8" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline">
                        <header>
                            <Label id="label8" text="{i18n>criteria}" wrapping="true"/>
                        </header>
                    </Column>
                </columns>
                <headerToolbar>
                    <OverflowToolbar width="100%" id="toolbar2" class="sapUiLargeMarginEnd">
                        <content>
                            <Text text="{parts : [{path : 'i18n>employeeTH'}, {path : 'oData>/Employees'}],formatter:'.productCount'}" id="text06"/> <!-- "{i18n>employeeTH}"     -->
                            <ToolbarSpacer id="spacer2"/>
                            <Button xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:dnd="sap.ui.core.dnd" xmlns="sap.m" text="Show Eligible Employees" id="button0_1629447758341"/>
                            <!-- <Button id="button0_1579056670196" press="onNavtoDetail" text="{i18n>tbnew}"/> -->
                            <Button id="button0" icon="sap-icon://sort" press="handleSortButtonPressed"/>
                            <Button id="button2" press="onPersoButtonPressed" icon="sap-icon://action-settings"/>
                            <Button id="button3" icon="sap-icon://refresh" press="onTablePersoRefresh"/>
                            <Button id="button4" icon="sap-icon://excel-attachment" press="onExport" enabled="false" class="sapUiLargeMarginEnd"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
            </Table>

            <!-- commnt scroll
				</ScrollContainer>
							<content/> <Text text="{i18n>theader} {/reply/hNumbers}" id="text06"/>
						
						-->
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <Toolbar width="100%" id="toolbar1" class="sapUiLargeMarginEnd">
                <content>
                    <ToolbarSpacer id="spacer1"/>
                    <Button xmlns="sap.m" text="Initiate Transfer" id="button0_1629447933973" press="initiateTransfer"/>
                    <Button xmlns="sap.m" text="Cancel" id="button1" class="sapUiLargeMarginEnd" press="cancelSimulation"/>
                </content>
            </Toolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
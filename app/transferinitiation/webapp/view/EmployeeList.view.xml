<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:cust="initiator.control"
    xmlns:dnd="sap.ui.core.dnd" controllerName="transferinitiation.controller.EmployeeList" id="EmployeeList" displayBlock="false">
    <f:DynamicPage id="dynamicPageId" showFooter="{FclRouter>/footerVisible1}" headerExpanded="{FclRouter>/headerExpanded}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title xmlns="sap.m" text="Employee List" id="textH" class="sapUiSmallMarginTop sapUiLargeMarginBegin titleText" level="H1" />
                </f:heading>
                <f:content />
                <f:actions />
                <f:navigationActions />
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <f:content>
                    <VBox fitContainer="true">
                        <items>
                            <fb:FilterBar id="filterbar0" search=".onSearch" clear=".onClear" useToolbar="true" showGoOnFB="true" showClearOnFB="true" showFilterConfiguration="true" class="">
                                <fb:filterGroupItems>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="A" label="{i18n>department}" visibleInFilterBar="true" labelTooltip="{i18n>department}">
                                        <fb:control>
                                            <Input validationError="handleValidationError" validationSuccess="handleValidationSuccess" value="{path:'filter>/filter/department', type: 'sap.ui.model.type.String' }" showSuggestion="true" id="fDepartment" suggest=".onSuggestDepart" suggestionItems="{filter>/department}">
                                                <suggestionItems>
                                                    <core:Item text="{=${filter>ID} +' '+ ${filter>name}}" />
                                                </suggestionItems>
                                            </Input>

                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="B" label="{i18n>class}" visibleInFilterBar="false" labelTooltip="{i18n>class}">
                                        <fb:control>
                                            <Input value="{filter>/filter/EmploymentClass}" showSuggestion="true" id="fEmploymentClass" suggest=".onSuggestClass" suggestionItems="{filter>/EmploymentClass}">
                                                <suggestionItems>
                                                    <core:Item text="{=${filter>ID} +' '+ ${filter>name}}" />
                                                </suggestionItems>
                                            </Input>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="C" label="{i18n>type}" visibleInFilterBar="false" labelTooltip="{i18n>type}">
                                        <fb:control>
                                            <!--Input validationError="handleValidationError" validationSuccess="handleValidationSuccess" value="{path:'suppInvoiceNo', type: 'sap.ui.model.type.String', constraints: { search: '^[0-9,*,a-z,A-Z]*$' }}"/  constraints: { search: '^[0-9,*,a-z,A-Z]*$' }   -->
                                            <Input value="{filter>/filter/EmploymentType}" suggestionItems="{filter>/EmploymentType}" showSuggestion="true" suggest=".onSuggestType">
                                                <suggestionItems>
                                                    <core:Item text="{=${filter>ID} +' '+ ${filter>name}}" />
                                                </suggestionItems>
                                            </Input>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="D" label="{i18n>location}" visibleInFilterBar="true" labelTooltip="{i18n>location}">
                                        <fb:control>
                                            <Input value="{filter>/filter/location}" suggestionItems="{filter>/location}" showSuggestion="true" suggest=".onSuggestLoc">
                                                <suggestionItems>
                                                    <!--  <core:Item text="{=${filter>ID} +' '+ ${filter>name}}"/> -->
                                                    <core:Item text="{filter>name}" />
                                                </suggestionItems>
                                            </Input>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem groupName="__$INTERNAL$" name="F" visibleInFilterBar="true" label="{i18n>position}" labelTooltip="{i18n>position}">
                                        <fb:control>
                                            <!--   <Input validationError="handleValidationError" validationSuccess="handleValidationSuccess" value="{path:'wbsElement', type: 'sap.ui.model.type.String'}"/> -->
                                            <Input value="{filter>/filter/position}" suggestionItems="{filter>/position}" showSuggestion="true" suggest=".onSuggestPosition">
                                                <suggestionItems>
                                                    <core:Item text="{=${filter>ID} +' '+ ${filter>name}}" />
                                                </suggestionItems>
                                            </Input>
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                </fb:filterGroupItems>
                            </fb:FilterBar>
                        </items>
                    </VBox>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <!-- DynamicPage Content -->
        <f:content>
            <!-- commnt scroll 	
          
						-->

              <ScrollContainer id="sc1" height="100%" width="100%" horizontal="false" vertical="true" focusable="true">

                <Table sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" noDataText="{i18n>terror}" id="table0" items="{OP>/EmployeeJobs}" fixedLayout="true" includeItemInSelection="false" growingScrollToLoad="false" growing="true" growingThreshold="{filter>/top}" updateFinished="onUpdateFinished" updateStarted="onUpdateStarted" growingTriggerText="More" itemPress="_onTableItemPress">
                    <dragDropConfig>
                        <dnd:DragInfo groupName="available2selected" sourceAggregation="items" />
                    </dragDropConfig>
                    <items>
                        <ColumnListItem type="{= ${OP>userId} !== '00000528' ? 'Active' : 'Inactive'}" id="item0_copy_table0_0" vAlign="Middle" highlight="Error" navigated="{
						parts: [
							'settings>/navigatedItem',
							'OP>userId'
						],
						formatter: '.isNavigated'
					}">
                            <customData>
                                <core:CustomData key="status" value="{ path:'OP>userId'}" writeToDom="true" />
                            </customData>
                            <cells>
                                <!--
                                            <f:Avatar src="https://sapui5.hana.ondemand.com/sdk/test-resources/sap/suite/ui/commons/demokit/images/people/i2.jpg" displaySize="S" showBorder="true" press="_onAvatarPress1" initials="{parts:[ {path: 'OP>First_Name'}, {path: 'OP>Last_Name'}, 'true' ], formatter:'.avatarInitialsFormatter'}"/>
                                            <ObjectIdentifier title="LName FName" text="{OP>userId}" titleActive="false" visible="true"/>
                                            <ObjectIdentifier title="Department Name" text="{OP>department}" titleActive="false" visible="true"/>
                                            <ObjectIdentifier title="Class Description" text="{OP>employeeClass}" titleActive="false" visible="true"/>
                                            <ObjectIdentifier title="Employment Type" text="{OP>employmentType}" titleActive="false" visible="true"/>
                                            <ObjectIdentifier title="Location" text="{OP>location}" titleActive="false" visible="true"/>
                                            <ObjectIdentifier title="Manager Name" text="{OP>managerId}" titleActive="false" visible="true"/>
                                            <ObjectIdentifier title="Position Name" text="{OP>position}" titleActive="false" visible="true"/>
                                            <Text text="" id="text04_copy_table0_0" wrapping="true"/>
                                            -->

                                <Link text="{OP>userId}" id="link0" press="onViewProfile" tooltip="View Profile" />
                                <Text text="Employee Name" id="te0" wrapping="true" />
                                <Text text="{OP>department}" id="text4_copy_table0_0" wrapping="false" />
                                <Text text="{OP>employeeClass}" id="text5_copy_table0_0" wrapping="false" />
                                <Text text="{OP>employmentType}" id="text6_copy_table0_0" wrapping="false" />
                                <Text text="{OP>location}" id="text7_copy_table0_0" wrapping="false" />
                                <Text text="{OP>managerId}" id="text8_copy_table0_0" wrapping="false" />
                                <ObjectStatus text="{oData>Transfer_Criteria}" state="{=${OP>Transfer_Criteria} === 'Eligible' ? 'Success' : 'Error' }" id="status0_copy_table0_0" icon="{=${OP>Transfer_Criteria} === 'Eligible' ? 'sap-icon://sys-enter-2' : 'sap-icon://status-negative' }" tooltip="Employee near to retirement, can not be transfered to new position." />
                                <Text text="{OP>position}" id="text9_copy_table0_0" wrapping="false" />
                                <Text text="{OP>positionNew}" id="text10_copy_table0_0" wrapping="false" />
                                <Text text="{OP>status}" id="text11_copy_table0_0" wrapping="false" />
                                <Button tooltip="Assign Position" id="butt_0" icon="sap-icon://feeder-arrow" type="Transparent" press="_onTableItemPress" />
                            </cells>

                        </ColumnListItem>

                    </items>
                    <columns>

                        <Column id="column1" minScreenWidth="Phone">
                            <header>
                                <Label text="{i18n>employeeId}" id="label1" wrapping="true" class="columnHeader titleText" />

                            </header>

                        </Column>
                        <Column id="column001" minScreenWidth="Phone" hAlign="Center">
                            <header>
                                <Label text="{i18n>employeeName}" id="label001" wrapping="true" class="columnHeader titleText" />

                            </header>

                        </Column>
                        <Column id="column2" demandPopin="true" minScreenWidth="Phone" popinDisplay="Inline" hAlign="Center">
                            <header>
                                <Label text="{i18n>department}" id="label2" wrapping="true" />

                            </header>

                        </Column>
                        <Column id="column3" minScreenWidth="Desktop" hAlign="Center" popinDisplay="Inline" demandPopin="true">
                            <header>
                                <Label id="label3" text="{i18n>class}" wrapping="true" />

                            </header>

                        </Column>
                        <Column id="column4" minScreenWidth="Desktop" hAlign="Center" popinDisplay="Inline" demandPopin="true">
                            <header>
                                <Label text="{i18n>type}" id="label4" wrapping="true" />

                            </header>

                        </Column>
                        <Column id="column5" minScreenWidth="Desktop" hAlign="Center" popinDisplay="Inline" demandPopin="true">
                            <header>
                                <Label text="{i18n>location}" id="label5" wrapping="true" />

                            </header>

                        </Column>
                        <Column id="column6" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center">
                            <header>
                                <Label text="{i18n>supervisor}" id="label6" wrapping="true" />

                            </header>

                        </Column>
                        <Column id="column8" demandPopin="true" minScreenWidth="Desktop" popinDisplay="Inline" hAlign="Center">
                            <header>
                                <Label id="label8" text="{i18n>criteria}" wrapping="true" />

                            </header>

                        </Column>
                        <Column id="column7" hAlign="Center" minScreenWidth="Desktop" popinDisplay="Inline" demandPopin="true">
                            <header>
                                <Label text="{i18n>position}" id="label7" wrapping="true" />

                            </header>

                        </Column>
                        <Column id="column9" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" hAlign="Center">
                            <header>
                                <Label id="label9" text="{i18n>newPosition}" wrapping="true" />

                            </header>

                        </Column>
                        <Column id="column10" demandPopin="true" minScreenWidth="Tablet" popinDisplay="Inline" hAlign="Center">
                            <header>
                                <Label id="label10" text="{i18n>status}" wrapping="true" />

                            </header>

                        </Column>
                        <Column id="column11" demandPopin="true" minScreenWidth="Phone" popinDisplay="Inline" hAlign="Center">
                            <header>
                                <Label id="label11" text="{i18n>assign}" wrapping="true" />

                            </header>

                        </Column>
                    </columns>
                    <headerToolbar>
                        <OverflowToolbar width="100%" id="toolbar2" class="sapUiLargeMarginEnd tblContainer">
                            <content>
                                <!--Title text="{parts : [{path : 'i18n>employeeTH'}, {path : 'OP>/Count'}, {path: 'filter>/currentPage'}, {path: 'filter>/top'}],formatter:'.productCount'}" id="text06" level="H1" class="titleText"/ -->
                                <ObjectStatus state="Success" id="status0_1642135399627" icon="sap-icon://sys-enter-2" text="Eligible" class="sapUiSmallMarginBegin" />
                                <ObjectStatus state="Warning" id="status0_1642135399627_copy" icon="sap-icon://warning" text="Eligible with Warning" />
                                <ObjectStatus state="Error" id="status0_1642135399627_copy2" icon="sap-icon://status-negative" text="Not Eligible" class="sapUiSmallMarginBeginEnd" />
                                <!-- "{i18n>employeeTH}"     -->

                                <ToolbarSpacer id="spacer2" />
                                <CheckBox text="Show Eligible Employees" selected="false" id="box0" />
                                <ToolbarSeparator id="separator0_copy" />
                                <SearchField placeholder="Search Employee" id="field0" width="215px" value="{filter>/filter/employee}" search="onSearch" />
                                <!-- <Button id="button0_1579056670196" press="onNavtoDetail" text="{i18n>tbnew}"/> -->
                                <Button id="button0" tooltip="Sort" icon="sap-icon://sort" press="handleSortButtonPressed" />
                                <Button id="button4" tooltip="Download as Excel" icon="sap-icon://excel-attachment" press="onExcelDownload" enabled="true" class="sapUiTinyMarginEnd" />

                            </content>

                        </OverflowToolbar>
                    </headerToolbar>
                </Table>

 </ScrollContainer>

           
            <!-- commnt scroll
            
							<content/> <Text text="{i18n>theader} {/reply/hNumbers}" id="text06"/>
						
						-->
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>

        </f:footer>
    </f:DynamicPage>
</mvc:View>
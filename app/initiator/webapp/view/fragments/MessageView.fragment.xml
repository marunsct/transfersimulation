<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Popover id="popover" contentWidth="440px"
			 contentHeight="440px"
			 verticalScrolling="false"
			 modal="true">
        <content>
            <MessageView id="mview" items="{message>/}" showDetailsPageHeader="false" groupItems="true" itemSelect="onMessageItemselect">  
                <MessageItem 
                type="{message>type}" 
                title="{message>message}" 
                subtitle="" 
                description="{message>description}" 
                counter="{counter}" 
                groupName="{message>additionalText}">

                </MessageItem>
            </MessageView>
        </content>
    <customHeader>
        <Bar id="bar0a">
            <contentLeft>
                <Button xmlns="sap.m" id="button1a" icon="sap-icon://nav-back" visible="false"/>
            </contentLeft>
        <contentMiddle>
            <Text xmlns="sap.m" text="Messages" id="text2a"/>
        </contentMiddle>
        </Bar>
    </customHeader>
    <footer>
        <Bar id="bar1a">
            <contentRight>
                <Button xmlns="sap.m" text="Close" id="button2a" press="onMessageClose"/>
            </contentRight>
        </Bar>
    </footer>
    </Popover>
</core:FragmentDefinition>
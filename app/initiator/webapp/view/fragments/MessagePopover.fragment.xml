<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <MessagePopover
        items="{message>/}"
        initiallyExpanded="true"
        groupItems="true">
        <MessageItem
            type="{message>type}"
            title="{message>message}"
            subtitle=""
            description="{message>description}"
            groupName="{message>additionalText}"/>
    </MessagePopover>
</core:FragmentDefinition>
